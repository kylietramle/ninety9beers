 <!-- Cirlce Starts -->
<div id="about"  class="container spacer about"> 

  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <div class="panel panel-warning">
        <div class="panel-heading" align="center">
          <img src="<%= @beer.beer.beer_label %>">
        </div>
        <div class="panel panel-warning" align="center">
          <p><strong><%= @beer.beer.beer_name %></strong></p>
        </div>
          <div class="panel-body" align="center">
            <p><%= @beer.beer.beer_style %></p>
            <% if @beer.user == current_user %>
              <%= link_to edit_beer_path(@beer) do %>
                <span class="glyphicon glyphicon-edit"></span>
                Edit
              <% end %>
            <% end %>
          </div>
        
      </div>
    </div>
  </div>

 <table>
  <tr>
    <th>Beer Name</th>
    <th>Label</th>
    <th>Style</th>
    <th>ABV</th>
    <th>IBU</th>
    <th>Brewery</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= @beer.beer.beer_name %></td>
    <td><img src="<%= @beer.beer.beer_label %>"</td>
    <td><%= @beer.beer.beer_style %></td>
    <td><%= @beer.beer.beer_abv %></td>
    <td><%= @beer.beer.beer_ibu %></td>
    <td><%= @beer.beer.brewery.brewery_name %></td>
    <td><%= @beer.beer.beer_description %></td>
  </tr>
  </table>


  <% if current_user && current_user.beers.include?(@api_beer) %>
    <p>Tap/Bottled: <%= @api_beer.tap_convert %></p>
    <p>Location Drank: </p>
    <p>My Image:
      <%= image_tag @api_beer.image_url(:preview).to_s %>
    </p>
      <div>
        <%= link_to "Edit Beer", "/beers/#{@api_beer.id}/edit" %>
        <%= link_to "Delete Beer", "/beers/#{@api_beer.id}", method: :delete, data: {confirm: "Are you sure?"}  %>
      </div>
  <% elsif current_user %>
    <h2>Add Beer</h2>
      <%= form_tag "/beers", multipart: true, method: :post do%>
        <div>
          <%= label_tag :rank %>
          <%= text_field_tag :rank%>
        </div>
        <div>
          <%= label_tag :tap %>
          <%= select_tag(:tap, options_for_select(['Tap', 'Bottled'])) %>
        </div>
        <div class="field">
          <%= label_tag :image %><br>
          <%= file_field_tag :image %>
        </div>
          <%= hidden_field_tag(:api_id, params[:id]) %>
       <div>
          <%= submit_tag "I Drank This!" %>
        </div>
      <% end %>
      <%= button_to "Add Your Own Beer", "/custom_beers/new", :method => "get" %>
  <% else %>
    <p>Please sign up to add beers!</p>
  <% end %>
</div>