<!-- Cirlce Starts -->
<div id="feed"  class="container spacer about">
  <h3 class="feedtitle">Bar Feed</h3>
  <% @activities.each do |activity| %>
    <div class="activity">
      <div class="list-group-item clearfix">
        <div class="news-avatar">
          <%= link_to "/users/#{activity.owner.id}" do %>
            <% if activity.owner.image_url %>
              <%= image_tag activity.owner.image_url(:preview) %>
            <% else %>
              <%= image_tag "/assets/genuser.png" %>
            <% end %>
          <% end %>
        </div>
        <span>
          <%= link_to activity.owner.first_name, activity.owner %>
          <%= render_activity activity %>
        </span>
      </div>
    </div>
  <% end %>
</div>